{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/docs",
    "packages/vue"
  ],
  "scripts": {
    "build:core": "cd packages/core && npm run build",
    "build:vue": "cd packages/vue && npm run build",
    "prerelease": "npm run build:core && npm run build:vue",
    "release": "npm run release --workspaces && release-it"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@release-it/bumper": "^6.0.1",
    "@types/node": "^20.14.2",
    "lerna": "^8.1.3",
    "release-it": "^17.4.0",
    "typescript": "^5.4.5"
  }
}
